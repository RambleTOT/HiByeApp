<resources>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="hintTextColor">@color/main_color</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="hintTextAppearance">@style/CustomHintTextAppearance</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="android:gravity">center_vertical</item> <!-- Выравнивание текста по центру -->
        <item name="android:paddingTop">0dp</item> <!-- Убираем верхний отступ -->
        <item name="android:paddingBottom">0dp</item> <!-- Убираем нижний отступ -->
        <item name="android:paddingStart">0dp</item> <!-- Убираем начальный отступ -->
        <item name="android:paddingEnd">0dp</item> <!-- Убираем конечный отступ -->

    </style>

    <!-- Стиль для текста подсказки -->
    <style name="CustomHintTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item> <!-- Размер текста -->
        <item name="android:textColor">@color/text_hint_color</item> <!-- Цвет текста -->
        <item name="fontFamily">@font/sfp_regular</item> <!-- Кастомный шрифт -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item> <!-- Убираем внутренние отступы шрифта -->
    </style>

    <!-- Стиль для TextInputEditText -->
    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/main_color</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/color_back_switch</item>
    </style>


    <style name="CustomCheckBoxStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/sfp_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/main_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>