<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <!-- Белый круг -->
            <item>
                <shape android:shape="oval">
                    <solid android:color="@android:color/white" /> <!-- Белый цвет -->
                    <size android:width="24dp" android:height="24dp" /> <!-- Размер круга -->
                </shape>
            </item>
            <!-- Отступы -->
            <item android:left="4dp" android:right="4dp">
                <shape android:shape="oval">
                    <solid android:color="@android:color/transparent" /> <!-- Прозрачный фон для отступов -->
                </shape>
            </item>
        </layer-list>
    </item>
