<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:background="@drawable/participant_background"
    android:weightSum="1"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/image_participant"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/icon_profile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/schedule_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:fontFamily="@font/sfp_semibold"
                android:includeFontPadding="false"
                android:text="Business Talks"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_weight="1"/>


            <TextView
                android:id="@+id/schedule_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:fontFamily="@font/sfp_regular"
                android:includeFontPadding="false"
                android:text="18:45 - 19:15"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:textColor="@color/text_hint_color"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <androidx.cardview.widget.CardView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:elevation="0dp"
                app:cardCornerRadius="1000dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/main_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:fontFamily="@font/sfp_regular"
                android:includeFontPadding="false"
                android:text="Образование"
                android:ellipsize="end"
                android:layout_marginStart="4dp"
                android:textColor="@color/text_hint_color"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>