<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:background="@drawable/participant_background"
    android:weightSum="1"
    android:layout_marginBottom="8dp">

    <FrameLayout
        android:id="@+id/image_group_meeting_item"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:visibility="gone"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/image_count_participant" />

        <TextView
            android:id="@+id/count_meet_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sfp_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="2 из 5"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </FrameLayout>


    <ImageView
        android:id="@+id/image_meet_part_item"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/icon_profile"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/meet_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:fontFamily="@font/sfp_semibold"
                android:includeFontPadding="false"
                android:text="Тимофей Валов"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_weight="1"/>


            <TextView
                android:id="@+id/meet_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:fontFamily="@font/sfp_regular"
                android:includeFontPadding="false"
                android:text="в 18:45"
                android:layout_marginStart="8dp"
                android:maxLines="2"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:textColor="@color/text_hint_color"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/meet_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:fontFamily="@font/sfp_regular"
            android:includeFontPadding="false"
            android:text="CEO HiBye, работаю в Pyrus"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_hint_color"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>