<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CodeEventFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_login"
            android:layout_marginHorizontal="85dp"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/sfp_regular"
                android:includeFontPadding="false"
                android:text="@string/text_event_code"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6"
                android:layout_marginTop="8dp">

                <EditText
                    android:id="@+id/code1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:background="@drawable/edit_text_code_background"
                    android:layout_marginEnd="4dp"
                    android:fontFamily="@font/sfp_regular"
                    android:textFontWeight="600"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/code2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:background="@drawable/edit_text_code_background"
                    android:layout_marginHorizontal="4dp"
                    android:fontFamily="@font/sfp_regular"
                    android:textFontWeight="600"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/code3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:background="@drawable/edit_text_code_background"
                    android:layout_marginHorizontal="4dp"
                    android:fontFamily="@font/sfp_regular"
                    android:textFontWeight="600"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/code4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:background="@drawable/edit_text_code_background"
                    android:layout_marginHorizontal="4dp"
                    android:fontFamily="@font/sfp_regular"
                    android:textFontWeight="600"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/code5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:background="@drawable/edit_text_code_background"
                    android:layout_marginHorizontal="4dp"
                    android:fontFamily="@font/sfp_regular"
                    android:textFontWeight="600"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <EditText
                    android:id="@+id/code6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="55dp"
                    android:maxLength="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:background="@drawable/edit_text_code_background"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/sfp_regular"
                    android:textFontWeight="600"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_login_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/main_color"
            android:fontFamily="@font/sfp_semibold"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4sp"
            android:paddingHorizontal="31dp"
            android:paddingVertical="16dp"
            android:text="@string/text_event_login"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="12dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>