<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingVertical="32dp"
    android:layout_gravity="center"
    android:layout_marginHorizontal="32dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/sfp_semibold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:text="@string/text_add_event"
        android:textColor="@color/black"
        android:textSize="22sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/code1dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_text_code_background"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/sfp_regular"
            android:textFontWeight="600"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/code2dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_text_code_background"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/sfp_regular"
            android:textFontWeight="600"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/code3dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_text_code_background"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/sfp_regular"
            android:textFontWeight="600"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/code4dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_text_code_background"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/sfp_regular"
            android:textFontWeight="600"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/code5dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_text_code_background"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/sfp_regular"
            android:textFontWeight="600"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/code6dialog"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:maxLength="1"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/edit_text_code_background"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/sfp_regular"
            android:textFontWeight="600"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_error_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:fontFamily="@font/sfp_regular"
        android:includeFontPadding="false"
        android:text="@string/text_error_code"
        android:textColor="@color/color_error"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add_code_new_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main_color"
        android:fontFamily="@font/sfp_semibold"
        android:includeFontPadding="false"
        android:lineSpacingExtra="4sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="@string/text_add_new_event"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:cornerRadius="12dp"/>

    <ProgressBar
        android:id="@+id/progress_add_code_dialog"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:indeterminateTint="@color/main_color"
        android:visibility="invisible"
        tools:visibility="visible"/>

    </FrameLayout>

    <TextView
        android:id="@+id/text_button_back_code_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/text_back_choose_event"
        android:includeFontPadding="false"
        android:textSize="14sp"
        android:textColor="@color/main_color"
        android:layout_gravity="center"
        android:fontFamily="@font/sfp_regular"/>

</LinearLayout>