<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="8dp"
    android:paddingVertical="16dp"
    android:background="@drawable/participant_background"
    android:layout_marginEnd="8dp">

    <ImageView
        android:id="@+id/image_participant"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/icon_profile"/>

    <TextView
        android:id="@+id/participant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:fontFamily="@font/sfp_semibold"
        android:includeFontPadding="false"
        android:text="Тимофей Валов"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/participant_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:fontFamily="@font/sfp_regular"
        android:includeFontPadding="false"
        android:text="Дизайнер HiBye скоро иду в Сколково"
        android:maxLines="2"
        android:minLines="2"
        android:ellipsize="end"
        android:textColor="@color/text_hint_color"
        android:textSize="12sp"/>

</LinearLayout>