<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CurrentEventFragment"
    android:background="@color/edit_text_background_nav_bar"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp">

                <LinearLayout
                    android:id="@+id/text_button_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingVertical="4dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_back" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/sfp_regular"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="@string/text_back"
                        android:textColor="@color/main_color"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sfp_semibold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="@string/text_event_2"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/current_event_background"
                android:layout_marginTop="24dp"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:paddingBottom="32dp">

                <ImageView
                    android:id="@+id/image_participant"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_profile"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/sfp_semibold"
                    android:includeFontPadding="false"
                    android:text="Business Talks"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/sfp_regular"
                    android:includeFontPadding="false"
                    android:text="Истории создания стартапов от успешных предпринимателей"
                    android:textColor="@color/text_hint_color"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_time_date"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="8dp">

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/sfp_regular"
                            android:includeFontPadding="false"
                            android:text="11 мая 2024 г."
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_time_date"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="8dp"
                        android:layout_marginStart="4dp">

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/sfp_regular"
                            android:includeFontPadding="false"
                            android:text="12:00"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/layout_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:flexWrap="wrap"
                    app:alignItems="flex_start"
                    app:justifyContent="flex_start">

                    <androidx.cardview.widget.CardView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:elevation="0dp"
                        app:cardCornerRadius="1000dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/main_color"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:fontFamily="@font/sfp_regular"
                        android:includeFontPadding="false"
                        android:text="Образование"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/text_hint_color"
                        android:textSize="16sp"/>


                </com.google.android.flexbox.FlexboxLayout>

<!--                <com.google.android.material.button.MaterialButton-->
<!--                    android:id="@+id/button_filters"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:backgroundTint="@color/selected_background_color"-->
<!--                    android:fontFamily="@font/sfp_semibold"-->
<!--                    android:includeFontPadding="false"-->
<!--                    android:lineSpacingExtra="4sp"-->
<!--                    android:paddingHorizontal="16dp"-->
<!--                    android:paddingVertical="16dp"-->
<!--                    android:text="@string/text_list_speaker"-->
<!--                    android:textColor="@color/main_color"-->
<!--                    android:textSize="16sp"-->
<!--                    app:cornerRadius="12dp"-->
<!--                    android:layout_marginTop="16dp"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="parent" />-->

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_add_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/main_color"
                    android:fontFamily="@font/sfp_semibold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="4sp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:text="@string/text_add_favorite"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="12dp"/>

                    <ProgressBar
                        android:id="@+id/progress_login"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/main_color"
                        android:visibility="invisible"
                        tools:visibility="visible"/>

                    <TextView
                        android:id="@+id/text_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="@font/sfp_semibold"
                        android:includeFontPadding="false"
                        android:text="Данное событие уже в избранном"
                        android:textColor="@color/main_color"
                        android:visibility="invisible"
                        android:textSize="18sp"/>

                </FrameLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>